<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>BaleBotNet</PackageId>
    <Version>3.1.0</Version>
    <Authors>Moqavem</Authors>
    <Company>RavaqeMehr</Company>
    <Product>BaleBotNet</Product>
    <PackRelease>true</PackRelease>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags>Bale;Bot;Messenger;BaleBot</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright © BaleBotNet 2025</Copyright>
    <PackageProjectUrl>https://ble.ir/BaleBotNet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/RavaqeMehr/BaleBotNet</RepositoryUrl>
    <Description>
      This client library enables working with the Bale Messenger API, allowing developers to easily integrate with the messaging platform. It provides a simple and efficient way to send and receive messages, manage contacts, and perform other operations within the Bale Messenger ecosystem.
      The library is designed to be user-friendly and efficient, making it easy for developers to get started with the Bale Messenger API. It abstracts away the complexities of the underlying API, allowing developers to focus on building their applications without worrying about the details of the API implementation.
      Official docs for the API can be found at: https://docs.bale.ai
    </Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>bale.png</PackageIcon>
  </PropertyGroup>

   <ItemGroup>
    <None Include="../bale.png" Pack="true" PackagePath="/" />
    <None Include="../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net8.0' ">
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net9.0' ">
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="9.0.9" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net10.0' ">
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="10.0.0-rc.1.25451.107" />
  </ItemGroup>

</Project>
